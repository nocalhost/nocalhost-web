{
    "name": "nocalhost-web",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "@types/jest": "^26.0.15",
        "@types/node": "^12.0.0",
        "@types/react": "^16.9.53",
        "@types/react-dom": "^16.9.8",
        "jwt-decode": "^3.1.1",
        "query-string": "^6.13.7",
        "ra-data-json-server": "^3.10.0",
        "ra-i18n-polyglot": "^3.10.0",
        "react": "^17.0.1",
        "react-admin": "^3.10.0",
        "react-dom": "^17.0.1",
        "react-scripts": "4.0.0",
        "typescript": "^4.0.3",
        "web-vitals": "^0.2.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx,md,css,json}": [
            "prettier --write",
            "git add"
        ],
        "packages/(e-share|enterprise|oa-qcloud|share)/**/*.scss": [
            "prettier --write",
            "yarn run scss-refactoring",
            "stylelint --config stylelint.config.js --syntax scss --fix",
            "git add"
        ],
        "packages/**/*.{js,jsx}": [
            "eslint --fix",
            "git add"
        ],
        "packages/**/*.{ts,tsx}": [
            "node --max_old_space_size=8192 node_modules/tslint/bin/tslint --project tsconfig.json --fix",
            "git add"
        ]
    },
    "devDependencies": {
        "@types/query-string": "^6.3.0",
        "@typescript-eslint/eslint-plugin": "^4.7.0",
        "@typescript-eslint/parser": "^4.7.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.13.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-import-resolver-webpack": "^0.13.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-typescript": "^0.14.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.1",
        "prettier": "^2.1.2",
        "stylelint": "^13.7.2",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-scss": "^3.18.0",
        "stylelint-webpack-plugin": "^2.1.1"
    }
}
